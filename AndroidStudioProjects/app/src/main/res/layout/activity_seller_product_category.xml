<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sellers.SellerProductCategoryActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chào mừng nhà kinh doanh trở lại!!"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:textSize="24sp"
        android:textColor="@color/xanhla"/>

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Đăng bán linh kiện mới"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        />



    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/asus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/asus"
            />

        <ImageView
            android:id="@+id/asus-rog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/asus_rog"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:id="@+id/acer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/acer"
            android:layout_marginStart="16dp"
            />

        <ImageView
            android:id="@+id/msi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/msi" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/intel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="80dp"
            android:src="@drawable/intel" />

        <ImageView
            android:id="@+id/ryzen-chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ryzennnn" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear1_category_layout_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/giga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gigabyte"
            />

        <ImageView
            android:id="@+id/galax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/galax_logo"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:id="@+id/evga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/evga"
            android:layout_marginEnd="18dp"
            />

        <ImageView
            android:id="@+id/another_vga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/another_vga"
            />



    </LinearLayout>

    <TextView

        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:text="Asus" />

    <TextView

        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="130dp"
        android:textStyle="bold"
        android:text="Asus ROG" />

    <TextView

        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="250dp"
        android:textStyle="bold"
        android:text="Acer" />

    <TextView

        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="330dp"
        android:textStyle="bold"
        android:text="MSI"/>





    <Button
        android:id="@+id/seller_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorPrimaryDark"
        android:text="Trở về trang chính"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textAllCaps="false"
        />





</RelativeLayout>